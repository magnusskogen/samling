{% assign subtitle = 'Handlekurv' %}

<form action="/cart" method="post" novalidate>
  <div class="border-t border-current bg-white">
    {% for item in cart.items %}
      <div class="border-t border-grey border-opacity-25">
        <div class="flex justify-between px-4 items-center">
            <a href="#" class="flex flex-wrap js-inner-link justify-between h-16 items-center">
                <div>
                <span class="underline">{{ item.title }}</span><br>
                <span class="text-xs">{{ item.price | money }}</span>
                </div>
            </a>
            <div class="flex">
              <div class="flex items-center mr-8">
                <div class="text-xs mr-4">Antall</div>
                <input type="text" name="updates[]" size="4" id="updates_{{ item.id }}" value="{{ item.quantity }}" class="bg-transparent border p-1 w-16 text-center"
                  />
              </div>
              <span class="text-sm items-center ml-1 flex rounded-full border p-2 px-2">{{ item.final_line_price | money }}</span>

            </div>
        </div>
      </div>
    {% endfor %}
  </div>
  <div class="border-t border-current bg-white">
    <div href="#" class="flex flex-wrap js-inner-link justify-between h-16 items-center px-4">
      <div class="strong">Totalt</div>
      <div class="strong">{{ cart.total_price | money }}</div>
    </div>
  </div>
  <div class="border-t border-current bg-white">
      <a href="#" class="flex js-accordion-link justify-between px-4 h-16 items-center w-full">
          <div class="text-sm">Legg til en beskjed</div>
          <svg class="caret" width="16" height="10" viewBox="0 0 16 10" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M1 1L8 8L15 1" stroke="#072F19" stroke-width="2"/>
          </svg>
      </a>
      <div class="js-accordion-content relative overflow-hidden">
          <div class="p-4">
            <textarea name="note" class="px-4 pb-8 text-sm w-full h-40 border" placeholder="Beskjed til bestillingen (feks ønsket leveringstidspunkt)"></textarea>
          </div>
      </div>
  </div>
  <div class="border-t border-current bg-white">
    <div href="#" class="flex flex-wrap js-inner-link justify-between h-16 items-center px-4">
        <button type="submit" name="update" class="text-sm items-center flex rounded-full border p-2 lg:p-4 mr-4">Oppdatér handlekurv</button>
        <button type="submit" name="checkout" class="bg-black text-white text-sm items-center flex rounded-full border p-2 lg:p-4">Gå til betaling</button>
    </div>
  </div>


</form>

